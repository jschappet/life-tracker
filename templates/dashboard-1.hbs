<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- Optimized for iPad/Table Displays -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Tasks Dashboard</title>
    <link rel="stylesheet" href="/s/css/output.css">
</head>
<body class="bg-gray-100 text-gray-900">

    <header class="bg-blue-600 text-white p-4">
        <h1 class="text-3xl font-bold">Life Tracker</h1>
    </header>

    <nav class="bg-white shadow p-4 mb-4">
        <ul class="flex space-x-4">
            <li><a href="/profile" class="text-blue-600">{{user.username}}</a></li>
            <li><a href="/logout" class="text-blue-600">Logout</a></li>
        </ul>
    </nav>

    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-semibold mb-4">Tasks Dashboard</h1>
        <ul class="space-y-4">
            {{#each tasks}}
                <li class="bg-white p-4 rounded shadow">
                    <h2 class="text-xl font-bold">{{this.title}}</h2>
                    <p>{{this.description}}</p>
                    <p class="text-gray-600">Due: {{this.due_date}}</p>
                </li>
            {{/each}}
            <li>
                <button class="bg-blue-600 text-white px-4 py-2 rounded" onclick="document.querySelector('.task-form').style.display='block'">Add New Task</button>
            </li>
        </ul>
    </div>

    <div class="task-form fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center" style="display: none;">
        <div class="bg-white p-6 rounded shadow-lg">
            <h2 class="text-xl font-semibold mb-4">Add New Task</h2>
            <form id="task-form" class="space-y-4">
                <input type="text" name="title" placeholder="Title" class="w-full p-2 border border-gray-300 rounded" required>
                <textarea name="description" placeholder="Description" class="w-full p-2 border border-gray-300 rounded" required></textarea>
                <input type="date" name="due_date" class="w-full p-2 border border-gray-300 rounded" required>
                <input type="hidden" name="user_id" value="{{user.id}}">
                <div class="flex space-x-4">
                    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Add Task</button>
                    <button type="button" class="bg-gray-600 text-white px-4 py-2 rounded" onclick="document.querySelector('.task-form').style.display='none'">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white p-4 text-center">
        <p>&copy; 2025 Life Tracker</p>
    </footer>    </footer>
    <script src="/s/js/script.js"></script>    <script src="/s/js/script.js"></script>
</body></body>
</html></html>
