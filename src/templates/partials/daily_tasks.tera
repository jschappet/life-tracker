<div id="daily-tasks">
  <h3>Today's To-Do List</h3>
  <ul>
    {% for task in tasks %}
      <li>
        <input type="checkbox" hx-get="/tasks/complete/{{ task.id }}" hx-target="#task-{{ task.id }}" id="task-{{ task.id }}">
        <label for="task-{{ task.id }}">{{ task.name }}</label>
      </li>
    {% endfor %}
  </ul>
</div>
